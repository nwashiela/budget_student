<div class="container">
	<title>BUDGET</title>

	<div class="row">

		<div class="twelve columns box">
			<form action="/budget" method="POST">

			
				<h1>BUDGETING STUDENT</h1>

				<hr>


				<div class="row">
					<div class="six columns">
						<label for="exampleEmailInput">Budget</label>
					<div>
						{{budget.amountLeft}}
					</div>
					</div>
					<div class="six columns">
						<label for="exampleRecipientInput">Amount Left</label>
						<div>
							{{budget.income}}
						</div>
					</div>
				</div>
<br>
<br>
<br>
					<div class="six columns box">
						<h2>EXPENSES</h2>

						<br>
						<h5>Please Enter Your Expenses</h5>
						<li><input type="text" name="expenseName" class="rent" placeholder="enter your expenses"></li>

						<h5>Please Enter Expense Amount</h5>
						<input class="u-full-width rentSetting" required type="number" name="cost"
							placeholder="enter the amount" value="{{settings.rentCost}}"></li>
						<br>
						<button class="button-primary" type="submit" name="button">Add</button>

						<hr>

						<ul>
							{{#each budget.items}}
							<li> {{name}} : {{cost}} </li>
							{{/each}}
						</ul>

						<strong>Total expenses:</strong>
						<span class="total ">R<span class="budgetTotal">{{budget.total}}</span> </span>



						<hr>

						<button class="button-primary" type='submit' name="button">Proceed</button>
					</div>


			</form>

			<canvas id="myChart" width="200" height="200"></canvas>


			<script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.9.3/Chart.min.js"
				integrity="sha512-s+xg36jbIujB2S2VKfpGmlC3T5V2TF3lY48DX7u2r9XzGzgPsa6wTpOQA7J9iffvdeBN0q9tKzRxVxw1JviZPg=="
				crossorigin="anonymous"></script>
			<script>
				var ctx = document.getElementById('myChart');
				var myChart = new Chart(ctx, {
					type: 'pie',
					data: {
						labels: {{{ labels }}},
				datasets: [{
					label: '# of Votes',
					data: {{ data }},
					backgroundColor: [
					'rgba(255, 99, 132, 0.2)',
					'rgba(54, 162, 235, 0.2)',
					'rgba(255, 206, 86, 0.2)',
					'rgba(75, 192, 192, 0.2)',
					'rgba(153, 102, 255, 0.2)',
					'rgba(255, 159, 64, 0.2)'
				],
					borderColor: [
					'rgba(255, 99, 132, 1)',
					'rgba(54, 162, 235, 1)',
					'rgba(255, 206, 86, 1)',
					'rgba(75, 192, 192, 1)',
					'rgba(153, 102, 255, 1)',
					'rgba(255, 159, 64, 1)'
				],
					borderWidth: 1
        }]
    }
});
			</script>
		</div>
	</div>
</div>